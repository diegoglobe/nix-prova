{
  description = "Ambiente di test per l'applicativo Spring/Angular";

  inputs = {
    # Per i pacchetti 'nuovi' (Node 24, Java 21)
    nixpkgs.url = "github:NixOS/nixpkgs/nixos-unstable";
    
    # Per i pacchetti 'vecchi' (MariaDB 10.4, PHP 8.2)
    nixpkgs-old.url = "github:NixOS/nixpkgs/nixos-23.05";
  };

  outputs = { self, nixpkgs, nixpkgs-old, ... }:
    let
      system = "x86_64-linux";
      
      # --- SET DI PACCHETTI NUOVI (da unstable) ---
      pkgs = nixpkgs.legacyPackages.${system};
      
      # --- SET DI PACCHETTI VECCHI (da 23.05) ---
      pkgs-old = import nixpkgs-old {
        inherit system;
        config.permittedInsecurePackages = [ "openssl-1.1.1w" ];
      };

      # --- DEFINIZIONE PHP (dal set VECCHIO) ---
      # Come confermato dal tuo 'nix search', il nome Ã¨ 'mysqli'
      php82 = pkgs-old.php82.withExtensions (ep: [
        ep.mysql 
        ep.curl
        ep.mbstring
      ]);

    in
    {
      devShells.${system}.default = pkgs.mkShell {
        buildInputs = [
          # === Pacchetti da 'pkgs' (NUOVO) ===
          pkgs.jdk21
          pkgs.maven
          pkgs.nodejs_24
          pkgs.foreman

          # === Pacchetti da 'pkgs-old' (VECCHIO) ===
          pkgs-old.apacheHttpd
          php82                # Il nostro PHP custom
          pkgs-old.php82Packages.php-fpm
          pkgs-old.phpmyadmin
          pkgs-old.mariadb_104
        ];
      };
    };
}
