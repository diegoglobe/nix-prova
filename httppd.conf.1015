# Configurazione minima di Apache per phpMyAdmin
ServerRoot "${pkgs.apacheHttpd}/lib/apache2"
Listen 127.0.0.1:8080

LoadModule mpm_event_module modules/mod_mpm_event.so
LoadModule proxy_module modules/mod_proxy.so
LoadModule proxy_fcgi_module modules/mod_proxy_fcgi.so
LoadModule unixd_module modules/mod_unixd.so
LoadModule dir_module modules/mod_dir.so

User ${builtins.toString (builtins.getEnv "USER")}
Group users

DocumentRoot "${pkgs.phpmyadmin}"
<Directory "${pkgs.phpmyadmin}">
    AllowOverride None
    Require all granted
    DirectoryIndex index.php
</Directory>

# Diciamo ad Apache di passare tutti i file .php
# al servizio PHP-FPM che gira sulla porta 9000
<FilesMatch \.php$>
    SetHandler "proxy:fcgi://127.0.0.1:9000"
</FilesMatch>
